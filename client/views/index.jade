doctype html
html(ng-app='creatorApp')
  head
    title="creator"
    include head.jade
  body(ng-controller='creatorController')
    #nav-bar
      .logo
        h1 creator
      //- .settings
    #content
      .program
        .title
          h2 program
        a(class='run' ng-click='run()')
        ul
          li(ng-repeat='instruction in instructions') {{ instruction }}
            a(class='remove' ng-click='remove($index)')
        .feedback(ng-bind='feedback')
      .pad
        .delete(id='delete-section' ng-show='isDragged' data-drop="true" jqyoui-droppable="{onDrop:'droppedOnDelete'}")
        a(class='add' ng-click='open()')
        li(ng-repeat='character in characters')
          img(id='{{character.id}}' ng-src='{{character.src}}' data-drag='true' jqyoui-draggable="{onStart:'dragStart', onStop:'dragStop'}")
      .input
        form(name='input' ng-submit='submit()')
          input(type='text' ng-model='text' placeholder='tell me what to do!')
          input(type='submit' id='submit' class='ng-hide')
      
          
