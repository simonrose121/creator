doctype html
html(ng-app='creator-app')
  head
    title="creator"
    include head.jade
  body(ng-controller='creator-controller')
    #nav-bar
      .logo
        h1 creator
    #content
      .program
        h2 program
        ul
          li(ng-repeat='instruction in instructions')
            div {{ instruction }}
        .input
          form(name='input' ng-submit='submit()')
            input(type='text' ng-model='text')
            input(type='submit' id='submit' class='ng-hide')
      .pad
      
          
